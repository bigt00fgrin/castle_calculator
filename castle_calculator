<body>

    <h2>Castle Calculator üè∞</h2>

    <label>Total Rent:</label>
    <input id="totalRent" type="number">

    <label>Common Space (2000‚Äì4000):</label>
    <input id="commonSpace" type="range" min="2000" max="4000" step="250" oninput="commonDisplay.value = this.value">
    <output id="commonDisplay">2000</output>

    <h3>Room Size Percentages:</h3>

<label>
    <input type="checkbox" id="usePresets" checked onchange="toggleRoomInputs()">
    Use preset percentages
</label>

<div id="presetValues">
    <p>Room 1: 0.238</p>
    <p>Room 2: 0.166</p>
    <p>Room 3: 0.326</p>
    <p>Room 4: 0.186</p>
    <p>Room 5: 0.075</p>
</div>

<div id="customInputs" style="display:none;">
    <label>Room 1 Percentage:</label>
    <input id="p1" type="number" step="0.0001">

    <label>Room 2 Percentage:</label>
    <input id="p2" type="number" step="0.0001">

    <label>Room 3 Percentage:</label>
    <input id="p3" type="number" step="0.0001">

    <label>Room 4 Percentage:</label>
    <input id="p4" type="number" step="0.0001">

    <label>Room 5 Percentage:</label>
    <input id="p5" type="number" step="0.0001">
</div>

    <button onclick="calculateRents()">Calculate Rents</button>

    <div id="results"></div>

    <script>
        function calculateRents() {
            const total = parseFloat(document.getElementById("totalRent").value);
            const common = parseFloat(document.getElementById("commonSpace").value);

            let p;
            if (document.getElementById("usePresets").checked) {
                p = [0.238, 0.166, 0.326, 0.186, 0.075];
            } else {
                p = [
                    parseFloat(document.getElementById("p1").value),
                    parseFloat(document.getElementById("p2").value),
                    parseFloat(document.getElementById("p3").value),
                    parseFloat(document.getElementById("p4").value),
                    parseFloat(document.getElementById("p5").value)
                ];
            }

            if (isNaN(total) || isNaN(common) || p.some(isNaN)) {
                document.getElementById("results").innerHTML = "Please enter all values.";
                return;
            }

            const commonDiv5 = common / 5;
            const adjustedRent = total - common;

            let output = "";

            p.forEach((percent, i) => {
                const rent = percent * adjustedRent + commonDiv5;
                output += `<p class='result'>Room ${i+1} Rent: <strong>$${rent.toFixed(2)}</strong></p>`;
            });

            document.getElementById("results").innerHTML = output;
        }
    
    function toggleRoomInputs() {
        const usePresets = document.getElementById("usePresets").checked;
        document.getElementById("presetValues").style.display = usePresets ? "block" : "none";
        document.getElementById("customInputs").style.display = usePresets ? "none" : "block";
    }

</script>

</body>
